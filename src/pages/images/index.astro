---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from "@images/post-05.png";

---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>

    <Image
        src={post05}
        width={250}
        height={250}
        alt={"Imagen del post"}
    />

    <h1>Quality low:</h1>
    <Image
    src={post05}
    quality={"low"}
    width={250}
    height={250}
    alt={"Imagen del post"}
    />
    
    <h1>Quality high:</h1>
    <Image
        src={post05}
        quality="high"
        width={250}
        height={250}
        alt={"Imagen del post"}
    />
    
    <h1>Otro formato:</h1>
    <Image
        src={post05}
        format="jpg"
        width={250}
        height={250}
        alt={"Imagen del post"}
    />
    
    <h1>Picture:</h1>
    <Picture
        src={post05}
        formats={["webp", "jpg"]}
        widths={[240, 540, 720, post05.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`}
        alt={"Imagen del post"}
    />
    
    
    <div style={{
        height: "1000px",
    }}>

    </div>


</MainLayout>

<style>
    h1 {
        color: white;
    }
</style>